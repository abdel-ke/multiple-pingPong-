// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id      String  @id
  name    String
  score   Int
  Match   Match?  @relation(fields: [matchId], references: [id])
  matchId String?
}

model Match {
  id       String   @id
  codeGame String
  player   Player[]
}
